<%= form_for @article, multipart: true do |f| %>
  <div class="row title">
    <%= f.label :title, "title" %><br>
    <%= f.text_field :title, size: '30' %>
  </div>
  <div class="row body">
    <%= f.label :body, "body" %><br>
    <%= f.text_area :body, size: '30' %>
  </div>
  <div class="row attach">
    <%= f.label :attach, "Attach" %>
    <%= f.file_field :attach %>
  </div>
  <div class="row submit">
    <%= f.submit %>
  </div>
<% end %>
